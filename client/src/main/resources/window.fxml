<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.281" fx:controller="ru.geekbrains.balyanova.marchchat.client.Controller">
    <HBox fx:id="loginPanel">
        <TextField fx:id="usernameField" promptText="Укажите ваш ник" HBox.hgrow="ALWAYS" />
        <TextField fx:id="passwordField" promptText="Укажите ваш пароль" HBox.hgrow="ALWAYS" />
        <Button onAction="#login" text="Войти" />
    </HBox>
    <VBox>
        <Button fx:id="logout" text="LOGOUT" onAction="#logout"/>
    </VBox>
    <HBox VBox.vgrow="ALWAYS">
        <TextArea VBox.vgrow="ALWAYS" wrapText="true" fx:id="chatArea" editable="false" style="-fx-background-color: DARKCYAN; -fx-control-inner-background:PALETURQUOISE " >
            <font>
                <Font size="16.0" />
            </font>
        </TextArea>
        <ListView prefWidth="150" maxWidth="150" minWidth="150" fx:id="clientsList"/>
    </HBox>
    <HBox fx:id="msgPanel" >
                <TextField fx:id="msgField" onAction="#reply" promptText="напиши здесь свое сообщение..." HBox.hgrow="ALWAYS" >
                 <HBox.margin>
                    <Insets />
                 </HBox.margin>
                 <padding>
                    <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                 </padding></TextField>
        <Button onAction="#reply" prefHeight="56.0" prefWidth="100.0" text="Ответить">
                 <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                 </padding>
                 <font>
                    <Font name="System Bold" size="16.0" />
                 </font>
                 <effect>
                    <ColorAdjust />
                 </effect></Button>
              <opaqueInsets>
                 <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
              </opaqueInsets>
    </HBox>

</VBox>
