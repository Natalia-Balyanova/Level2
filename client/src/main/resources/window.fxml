<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="center" prefHeight="420.0" prefWidth="680.0" xmlns="http://javafx.com/javafx/8.0.281" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.geekbrains.balyanova.marchchat.client.Controller">

    <TextArea fx:id="chatArea" editable="false" style="-fx-background-color: DARKCYAN; -fx-control-inner-background:PALETURQUOISE " VBox.vgrow="ALWAYS">
        <font>
            <Font size="16.0" />
        </font>
    </TextArea>
    <HBox>

        <TextField fx:id="msgField" onAction="#reply" promptText="напиши здесь свое сообщение..."  HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets />
         </HBox.margin>
         <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
<!--             код ниже сделан через SceneBuilder-->
         </padding></TextField>
        <Button onAction="#reply" prefHeight="57.0" prefWidth="100.0" text="Ответить" textFill="#3c3b3b">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
         <effect>
            <ColorAdjust />
         </effect></Button>
      <opaqueInsets>
         <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
      </opaqueInsets>
      <VBox.margin>
         <Insets />
      </VBox.margin>
    </HBox>
    <VBox prefHeight="13.0" prefWidth="646.0" />
   <ButtonBar prefHeight="40.0" prefWidth="200.0">
     <buttons>
         <Button mnemonicParsing="false" onAction="#sendSmile" text="смайлы" />
         <Button mnemonicParsing="false" onAction="#sendFile" text="прикрепить" />
     </buttons>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </ButtonBar>
    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
    </padding>

</VBox>
